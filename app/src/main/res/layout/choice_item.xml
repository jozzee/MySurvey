<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText_choice"
            android:scrollbars="vertical"
            android:hint="Enter Answer Choice"
            android:inputType="text"
            android:imeOptions="actionNext"
            android:textSize="20dp"
            android:layout_toLeftOf="@+id/imageView_iconMenu_cardViewMenu"
            android:layout_toStartOf="@+id/imageView_iconMenu_cardViewMenu"
            android:layout_weight="1"
            android:layout_marginRight="16dp" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:id="@+id/imageView_deleteChoice"
            android:src="@drawable/ic_delete2"
            android:scaleType="centerCrop"
            android:layout_gravity="center_vertical" />

    </LinearLayout>
</LinearLayout>