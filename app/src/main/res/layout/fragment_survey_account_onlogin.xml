<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.jozzee.mysurvey.main.SurveyAccountOnLoginFragment">
    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/rootLayout_onLogin"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/nestedScrollView_onLogin">
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp"
            android:id="@+id/linearLayout_mainView_onLogin">
                <RelativeLayout
                    android:id="@+id/relativeLayout_profile_onLogin"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:id="@+id/imageView_profileImage_onLogin"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/im_profile" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Profile Name"
                        android:id="@+id/textView_profileName_onLogin"
                        android:textSize="30sp"
                        android:singleLine="true"
                        android:scrollHorizontally="false"
                        android:ellipsize="end"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/imageView_profileImage_onLogin"
                        android:layout_toEndOf="@+id/imageView_profileImage_onLogin"
                        android:layout_marginTop="16dp"
                        android:layout_marginLeft="16dp"
                        android:lines="1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View your profile"
                        android:id="@+id/textView_viewProfile_onLogin"
                        android:layout_below="@+id/textView_profileName_onLogin"
                        android:layout_alignLeft="@+id/textView_profileName_onLogin"
                        android:layout_alignStart="@+id/textView_profileName_onLogin" />

                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    android:background="#F0F0F0" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Menu"
                    android:id="@+id/textView_menuTitle_onLogin"
                    android:layout_marginTop="32dp"
                    android:layout_marginLeft="16dp" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:padding="8dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:id="@+id/linearLayout_mySurvey_onLogin">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_menu_black"
                        android:id="@+id/imageView_iconMySurvey_onLogin"
                        android:layout_marginRight="16dp"
                        android:layout_marginLeft="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MySurvey"
                        android:id="@+id/textView_mySurvey_onLogin"
                        android:layout_gravity="center_vertical"
                        android:textSize="20dp"
                        android:singleLine="true"
                        android:scrollHorizontally="false"
                        android:ellipsize="end"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:padding="8dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:id="@+id/linearLayout_createSurvey_onLogin">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_create"
                        android:id="@+id/imageView_iconCreateSurvey_onLogin"
                        android:layout_marginRight="16dp"
                        android:layout_marginLeft="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Create Survey"
                        android:id="@+id/textView_createSurvey_onLogin"
                        android:layout_gravity="center_vertical"
                        android:textSize="20dp"
                        android:singleLine="true"
                        android:scrollHorizontally="false"
                        android:ellipsize="end"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:padding="8dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:id="@+id/linearLayout_logOut_onLogin">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_logout"
                        android:id="@+id/imageView_iconLogOut_onLogin"
                        android:layout_marginRight="16dp"
                        android:layout_marginLeft="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Logout"
                        android:id="@+id/textView_logOut_onLogin"
                        android:layout_gravity="center_vertical"
                        android:textSize="20dp"
                        android:singleLine="true"
                        android:scrollHorizontally="false"
                        android:ellipsize="end"/>
                </LinearLayout>

            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </android.support.design.widget.CoordinatorLayout>

    <ProgressBar
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:id="@+id/progressBar_onLogin"
        android:visibility="gone"
        android:indeterminate="false"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:id="@+id/imageView_retry_onLogin"
        android:src="@drawable/ic_retry"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:visibility="gone" />

</RelativeLayout>