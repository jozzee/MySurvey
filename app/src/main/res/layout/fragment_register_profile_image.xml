<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jozzee.mysurvey.register.RegisterProfileImageFragment">
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/nestedScrollView_unLogin">
        <LinearLayout
            android:id="@+id/linearLayout_uploadProfileImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/relativeLayout_uploadProfileImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Create a Profile Image"
                    android:id="@+id/textView_createProfileImage_uploadProfileImage"
                    android:textSize="24dp"
                    android:textIsSelectable="true"
                    android:textColor="@color/colorPrimaryText"
                    android:layout_below="@+id/button_skip_uploadProfileImage"
                    android:layout_centerHorizontal="true" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/layoutProfileImage"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="64dp"
                    android:layout_marginRight="64dp"
                    android:layout_marginTop="128dp"
                    android:layout_marginBottom="16dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageView_uploadProfileImage"
                        android:scaleType="centerCrop"
                        android:layout_centerHorizontal="true" />
                </LinearLayout>
                <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/relativeLayout"
                android:layout_below="@+id/layoutProfileImage"
                android:layout_centerHorizontal="true">
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/takePhoto"
                        android:id="@+id/button_takePhoto_uploadImageProfile"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:textColor="@color/colorPrimary"
                        style="?android:attr/borderlessButtonStyle"/>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/choosePhoto"
                        android:id="@+id/button_choosePhoto_uploadImageProfile"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/button_takePhoto_uploadImageProfile"
                        android:layout_toEndOf="@+id/button_takePhoto_uploadImageProfile"
                        android:textColor="@color/colorPrimary"
                        style="?android:attr/borderlessButtonStyle"/>
                </RelativeLayout>

                <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Upload"
                android:id="@+id/button_upload_profileImage"
                android:layout_below="@+id/relativeLayout"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:textColor="#ffffff"
                android:layout_marginBottom="16dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Skip"
                android:id="@+id/button_skip_uploadProfileImage"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:textColor="@color/colorAccent"
                style="?android:attr/borderlessButtonStyle"/>

            </RelativeLayout>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</RelativeLayout>
