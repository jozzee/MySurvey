<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:id="@+id/CardView_questionText_doSurvey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        >
        <RelativeLayout
            android:id="@+id/relativeLayout_questionText_doSurvey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linerLayout_block_questionText_doSurvey">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:id="@+id/linearLayout_questionTitle_questionText_doSurvey"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No."
                        android:id="@+id/textView_no_questionText_doSurvey"
                        android:textSize="20dp"
                        android:textColor="@color/colorPrimaryText" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Questions..."
                        android:id="@+id/textView_question_questionText_doSurvey"
                        android:textSize="20dp"
                        android:layout_marginLeft="8dp"
                        android:textColor="@color/colorPrimaryText" />

                </LinearLayout>
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/TextInputLayout_answer_questionText_doSurvey"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="16dp"
                    android:layout_height="wrap_content">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:imeOptions="actionDone"
                        android:id="@+id/editText_answer_questionText_doSurvey"
                        android:hint="Enter Answer Here" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>



        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>